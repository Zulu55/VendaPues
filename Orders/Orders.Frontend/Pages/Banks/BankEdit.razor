@page "/banks/edit/{Id:int}"

@if (bank is null)
{
    <Loading />
}
else
{
    <MudCard>
        <div class="p-3">
            <MudItem>
                <MudText Typo="Typo.h5">Editar Banco</MudText>
            </MudItem>
            <FormWithName @ref="bankForm" Label="Banco: " Model="bank" OnValidSubmit="EditAsync" ReturnAction="Return" />
        </div>
    </MudCard>
}