<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation"></NavigationLock>

<EditForm EditContext="editContext" OnValidSubmit="OnDataAnnotationsValidatedAsync">
    <DataAnnotationsValidator />

    <MudCard>
        <div class="card-header">
            <span class="d-flex justify-content-between align-items-center w-100">
                <div>
                    <i class="bi bi-newspaper"></i> @titleLabel
                </div>
                <div class="d-flex justify-content-end">
                    <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Info" OnClick="ReturnAction" Class="me-2">
                        Regresar
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Check" Color="Color.Primary" ButtonType="ButtonType.Submit">
                        Guardar
                    </MudButton>
                </div>
            </span>
        </div>
        <div class="card-body">
            <div class="mb-2">
                <MudTextField Label="Nombre Proveedor"
                              @bind-Value="@NewsArticle.Title"
                              For="@(() => NewsArticle.Title)"
                              Class="mb-2" />
            </div>
            <div class="mb-2">
                <MudTextField Label="Documento"
                              @bind-Value="@NewsArticle.Summary"
                              For="@(() => NewsArticle.Summary)"
                              Class="mb-2" />
            </div>
            <div class="mb-2">
                <MudCheckBox @bind-Checked="@NewsArticle.Active" />
            </div>
            <div class="mb-2">
                <InputImg Label="Imagen" ImageSelected="ImageSelected" ImageURL="@imageUrl" />
            </div>
        </div>
    </MudCard>
</EditForm>