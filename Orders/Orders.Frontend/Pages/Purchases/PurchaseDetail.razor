@page "/purchases/detail/{PurchaseId}"

@if (loading)
{
    <Loading />
}
else
{
    <MudCard>
        <MudTable Items="@Purchases"
                  @ref="table"
                  ServerData="@(new Func<TableState, Task<TableData<Purchase>>>(LoadListAsync))"
                  Dense="true"
                  Hover="true"
                  Striped="true"
                  FixedHeader="true"
                  FixedFooter="true">
            <ToolBarContent>
                <div class="d-flex justify-content-between">
                    <MudText Typo="Typo.h6" Class="me-4"><i class="bi bi-bag"></i> Detalle Compra</MudText>
                </div>
                <MudSpacer />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Fecha</MudTh>
                <MudTh>Proveedor</MudTh>
                <MudTh>Comentarios</MudTh>
                <MudTh>Líneas</MudTh>
                <MudTh>Cantidad</MudTh>
                <MudTh>Fecha</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Fecha">@context.Date.ToLocalTime()</MudTd>
                <MudTd DataLabel="Proveedor">@context.Supplier!.SupplierName</MudTd>
                <MudTd DataLabel="Comentarios">@context.Remarks</MudTd>
                <MudTd DataLabel="Líneas">@($"{context.Lines:N0}")</MudTd>
                <MudTd DataLabel="Cantidad">@($"{context.Quantity:N2}")</MudTd>
                <MudTd DataLabel="Valor">@($"{context.Value:c2}")</MudTd>
            </RowTemplate>
            <NoRecordsContent>
                <MudText>No se encontraron registros.</MudText>
            </NoRecordsContent>
            <PagerContent>
                <MudTablePager RowsPerPageString="Numero de Registros:"
                               PageSizeOptions="pageSizeOptions"
                               AllItemsText="Todos" />
            </PagerContent>
        </MudTable>
        <div class="p-2">
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Info" Href="/purchases" Class="p-2">
                Regresar
            </MudButton>
        </div>
    </MudCard>
}