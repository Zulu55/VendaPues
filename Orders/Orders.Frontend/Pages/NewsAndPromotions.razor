<MudPaper Class="p-4 my-4">
    <MudText Typo="Typo.h3" Align="Align.Center">Noticias Destacadas</MudText>
</MudPaper>

<MudGrid Gutter="true">
    @foreach (var news in newsArticles)
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="mb-4">
                <MudCardMedia Image="@news.ImageUrl" Alt="@news.Title" Height="200" />
                <MudCardContent>
                    <MudText Typo="Typo.h5" Bold="true">@news.Title</MudText>
                    <MudText Typo="Typo.body2">@news.Summary</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => ViewDetails(news.Id))">Leer más</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
