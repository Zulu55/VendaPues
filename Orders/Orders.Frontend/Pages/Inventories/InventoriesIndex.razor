@page "/inventories"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@Categories"
              @ref="table"
              ServerData="@(new Func<TableState, Task<TableData<Category>>>(LoadListAsync))"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <div class="d-flex justify-content-between">
                <MudText Typo="Typo.h6" Class="me-4"><i class="bi bi-clipboard-check"></i> Inventarios</MudText>
                <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.Add" Color="Color.Info" OnClick="@(() => ShowModalAsync())">Crear</MudButton>
            </div>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Categoría</MudTh>
            <MudTh style="width: 380px;">Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Categoría">@context.Name</MudTd>
            <MudTd DataLabel="Acciones">
                <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.LooksOne" Color="Color.Warning" OnClick="@(() => ShowModalAsync(context.Id, true))">
                    Conteo
                </MudButton>
                <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.LooksTwo" Color="Color.Info" OnClick="@(() => ShowModalAsync(context.Id, true))">
                    Conteo
                </MudButton>
                <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.Looks3" Color="Color.Secondary" OnClick="@(() => ShowModalAsync(context.Id, true))">
                    Conteo
                </MudButton>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No se encontraron registros.</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString="Numero de Registros:"
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText="Todos" />
        </PagerContent>
    </MudTable>
}

